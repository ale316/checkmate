<!DOCTYPE html>
<html ng-app>
<head>
	<title>Checkmate</title>
	<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,600' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" type="text/css" href="/public/css/main.css">
	<script type="text/javascript" src="/public/js/lib/jquery.min.js"></script>
	<script type="text/javascript" src="/public/js/lib/angular.min.js"></script>
	<script type="text/javascript" src="/public/js/lib/date.js"></script>
	<script type="text/javascript" src="/public/js/lib/pattern.js"></script>

</head>
<body>
	<div id="container" ng-controller="Task">
		<div id="top">
			<div contenteditable="true" id="pattern" ng-keydown="enterTask($event)" ></div>
		</div>
		<div id="content">
			<h2>Today</h2>
			<ul>
				<li ng-repeat="task in tasks">
					<p class="task">{{ task.task }}</p>
					<span class="time">{{ task.time }}</span>
				</li>
			</ul>
		</div>
	</div>

	<script type="text/javascript" src="/public/js/main.js"></script>
</body>
</html>